
<%- include('../Layout/header') %>


<section>
        <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img src="/images/1.avif" class="d-block w-100" alt="slider image" title="silder image">
                        </div>
                        <div class="carousel-item">
                        <img src="/images/2.avif" class="d-block w-100" alt="slider image" title="silder image">
                        </div>
                        <div class="carousel-item">
                        <img src="/images/3.avif" class="d-block w-100" alt="slider image" title="silder image">
                        </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                </button>
        </div>
</section>

<section class="allmovies py-5">
        <div class="container">
                <div class="row g-4">
                        <% allMovies.map((item)=>{ %>
                                <div class="w-5">
                                        <div class="card rounded-2 border-0 bg-transparent">
                                                <a href="/singleMovie/<%= item.id %>">
                                                        <div class="position-ralative">
                                                                <img src="<%= item.coverImage %>" alt="coverImage" title="coverImage" width="100%" class="img-fluid rounded-4">
                                                                <div class="position-absolute rating text-white w-100 satrt-0 border-top py-1 px-2">
                                                                        <i class="ri-star-fill"></i> <span><%= item.rating %>/10</span>
                                                                </div>
                                                        </div>
                                                </a>
                                                <div class="card-body">
                                                        <h4><%= item.title %></h4>
                                                        <p><%= item.genre.join('/') %></p>
                                                </div>
                                        </div>
                                </div>
                        <% }) %>
                        <div class="pagination d-flex align-items-center justify-content-center">
                                <a href="?page=<%= page-1 %><%= searchQuery != ''?'&searchQuery='+searchQuery:'' %>" class="btn text-white <%= page<1?'disabled':'' %>">Prev</a>
                                <span class="mx-3"><%= page+1 %></span>
                                <a href="?page=<%= page+1 %><%= searchQuery != ''?'&searchQuery='+searchQuery:'' %>" class="btn text-white <%= page>= totalCountes-1?'disabled':'' %>">Next</a>
                        </div>
                </div>
        </div>
</section>

<%- include('../Layout/footer') %>