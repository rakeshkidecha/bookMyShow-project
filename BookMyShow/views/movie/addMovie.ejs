
<%- include('../Layout/header') %>


<section class="py-5 add-form">
        <div class="conatiner">
            <form method="post" action="/insertMovie" enctype="multipart/form-data" class="col-5 mx-auto">
                <label class="mb-1 mt-3">Enter Title :- </label>
                <input type="text" name="title" class="form-control" />

                <div class="d-flex align-items-center">
                    <label class="mb-1 mt-3">Enter Rating :- </label>
                    <div class="d-flex ms-3">
                        <% for(let i=1;i<=10;i++) { %>
                            <div class="d-flex align-items-center me-3">
                                <input type="radio" name="rating" value="<%= i %>"/><span class="ms-1"><%= i %></span>
                            </div>
                        <% } %>
                    </div>
                </div>

                <label class="mb-1 mt-3">Choose Type :- </label>
                <% movieTypeNames=["2D","3D","ICE","4DX","4DX 3D","IMAX 2D","IMAX 3D"] %>
                <div class="row">
                    <% movieTypeNames.map((item)=>{ %>
                        <div class="col-3">
                            <input type="checkbox" name="movieType" value="<%= item %>"/><span class="ms-2"><%= item %></span>
                        </div>
                    <% }) %>
                </div>

                <label class="mb-1 mt-3">Choose language :- </label>
                <% languageName=["Hindi","Telugu","Bngali","English","Tamil"] %>
                <div class="row">
                    <% languageName.map((item)=>{ %>
                        <div class="col-3">
                            <input type="checkbox" name="language" value="<%= item %>"/><span class="ms-2"><%= item %></span>
                        </div>
                    <% }) %>
                </div>

                <div class="mb-1 mt-3">
                    <label >Enter Time duration :- </label>
                    <select name="hours" >
                        <option value="">-- hours --</option>
                        <% for(let i=1;i<=12;i++) { %>
                            <option value="<%= i %>"><%= i %></option>
                        <% } %>
                    </select>
                <select name="minutes" >
                    <option value="">-- minutes --</option>
                    <% for(let i=1;i<=60;i++) { %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>
                </div>

                <label class="mb-1 mt-3">Choose Genre :- </label>
                <% genreNames=["Action","Horror","Romance","Thriller","Comedy"] %>
                <div class="row">
                    <% genreNames.map((item)=>{ %>
                        <div class="col-3">
                            <input type="checkbox" name="genre" value="<%= item %>"/><span class="ms-2"><%= item %></span>
                        </div>
                    <% }) %>
                </div>

                <label class="mb-1 mt-3">select criteria :- </label>
                <select name="criteria"> 
                    <% criteriaNames=["UA16+","UA18+","All"] %>
                    <option value="">-- select criteria --</option>
                    <% criteriaNames.map((item)=>{ %>
                        <option value="<%= item %>"><%= item %></option>
                    <% }) %>
                <select>


                <div>
                    <label class="mb-1 mt-3">Realese Date :- </label>
                    <input type="date" name="realeseDate" />
                </div>

                <div>
                    <label class="mb-1 mt-3">Cover Image :- </label>
                    <input type="file" name="coverImage"  />
                </div>

                <div>
                    <label class="mb-1 mt-3">Description :- </label>
                    <textarea name="description" class="form-control"></textarea>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn text-white">Add</button>
                </div>

            </form>
        </div>
</section>

<%- include('../Layout/footer') %>